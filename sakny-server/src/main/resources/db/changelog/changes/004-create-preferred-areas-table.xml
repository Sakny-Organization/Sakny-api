<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-preferred-areas-table" author="Mohamed Mekhemer">
        <createTable tableName="preferred_areas">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="profile_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_preferred_areas_profile"
                             references="user_profiles(id)"
                             deleteCascade="true"/>
            </column>
            <column name="governorate_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="city_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(255)"/>
        </createTable>

        <addUniqueConstraint tableName="preferred_areas"
                             columnNames="profile_id, governorate_id, city_id"
                             constraintName="uq_preferred_area_location"/>

        <createIndex indexName="idx_preferred_areas_profile_id" tableName="preferred_areas">
            <column name="profile_id"/>
        </createIndex>

        <setTableRemarks tableName="preferred_areas" remarks="User preferred living areas for roommate matching"/>
    </changeSet>

</databaseChangeLog>
