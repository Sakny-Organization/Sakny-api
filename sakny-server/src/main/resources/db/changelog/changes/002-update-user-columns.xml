<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-update-users-columns" author="sakany-team">
        <!-- Add name column -->
        <addColumn tableName="users">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Drop old columns -->
        <dropColumn tableName="users" columnName="first_name"/>
        <dropColumn tableName="users" columnName="last_name"/>

        <!-- Make password nullable -->
        <dropNotNullConstraint tableName="users" columnName="password" columnDataType="VARCHAR(255)"/>
    </changeSet>

</databaseChangeLog>
