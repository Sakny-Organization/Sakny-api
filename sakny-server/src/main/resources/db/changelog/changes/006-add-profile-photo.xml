<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-add-profile-photo-url" author="Mohamed Mekhemer">
        <addColumn tableName="user_profiles">
            <column name="profile_photo_url" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="user_profiles" columnName="profile_photo_url"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

